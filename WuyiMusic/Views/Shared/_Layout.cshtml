                <h4 class="active"><span></span><i class="bi bi-music-note-beamed"></i>Last Listening</h4>
                <h4 class="active"><span></span><i class="bi bi-music-note-beamed"></i>Recommented</h4>
            </div>
            <div class="menu_song">
                <li class="songItem">
                    <span>01</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="1"></i>
                </li>
                <li class="songItem">
                    <span>02</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="2"></i>
                </li>
                <li class="songItem">
                    <span>02</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="3"></i>
                </li>
                <li class="songItem">
                    <span>03</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="4"></i>
                </li>
                <li class="songItem">
                    <span>04</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="4"></i>
                </li>
                <li class="songItem">
                    <span>05</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="5"></i>
                </li>
                <li class="songItem">
                    <span>06</span>
                    <img src="/assets/song-1.png" alt="Alan"><!-- đây là đường dẫn ảnh của nhạc -->
                    <h5>
                        on my way
                        <div class="subtitle">Alan</div>
                    </h5>
                    <i class="bi PlayListPlay bi-play-circle-fill" id="6"></i>
                </li>

            </div>
        </div>
        <div class="song_side">
            <nav>
                <ul>
                    <li>Discover <span></span></li>
                    <li>My Libray <span></span></li>
                    <li>Radio <span></span></li>
                </ul>
                <div class="search">
                    <i class="bi bi-search"></i>
                    <input type="text" id="searchInput" placeholder="search music">
                </div>
                <div class="user">
                    <img src="/assets/profile.png" alt="user" title="wuyi">
                </div>
            </nav>
            <div class="content" >
                @RenderBody()
            </div>
        </div>

        <div class="master_play">
            <div class="wave">
                <div class="wave1"></div>
                <div class="wave1"></div>
                <div class="wave1"></div>
            </div>
            <img id="imgSong" src="/assets/song-1.png" alt="Alan">
            <h5 id="nameSong">
                on my way <br>
                <div class="subtitle">Alan</div>
            </h5>
            <div class="icon">
                <i class="bi bi-skip-start-fill"></i>
                <i id="masterPlay" class="bi bi-play-fill"></i>
                <i class="bi bi-skip-end-fill"></i>
            </div>
            <span id="currentStart">0:00</span>
            <div class="bar">
                <input type="range" id="seek" min="0" value="0" max="100">
                <div class="bar2" id="bar2"></div>
                <div class="dot"></div>
            </div>
            <span id="currentEnd">0:00</span>
            <div class="vol">
                <i class="bi bi-volume-down-fill" id="vol_icon"></i>
                <input type="range" id="vol" min="0" value="100" max="100">
                <div class="vol_bar"></div>
                <div class="dot" id="vol_dot" ></div>
            </div>
    </header>
    <audio id="audioPlayer" controls="controls" class="hidden">
        <source src="file.mp3" type="audio/mp3">
        Your browser does not support the audio element.
    </audio>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/app.js"></script>
    
</body>

</html>
