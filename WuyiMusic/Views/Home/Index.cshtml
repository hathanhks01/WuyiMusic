<div class="popular_song">
    <div class="h4">
        <h4>popular song</h4>
        <div class="btn_s">
            <i id="right-scroll" class="bi bi-arrow-right-short"></i>
            <i id="left-scroll" class="bi bi-arrow-left-short"></i>
        </div>
    </div>

    <div class="pop_song">
        @foreach (var song in Model)
        {
            <li class="songItem">
                <div class="img_play">
                    <img src="@song.ImgUrl" alt="Song Image">
                    <i onclick="playSong('@Url.Content("~/SongPath/" + song.FilePath)','@song.ImgUrl','@song.Title')" class="bi PlayListPlay bi-play-circle-fill"></i>
                </div>
                <h5>
                    @song.Title;
                    <div class="subtitle">@(song.artist != null ? song.artist.Name : "Unknown Artist")</div>
                </h5>
            </li>
        }
    </div>
</div>
<div class="popular_artists">
    <div class="h4">
        <h4>popular artists</h4>
        <div class="btn_s">
